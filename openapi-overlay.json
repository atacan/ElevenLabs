{
  "_comment": "OpenAPI Overlay for ElevenLabs. For syntax, see: https://github.com/OAI/Overlay-Specification",
  "overlay": "1.0.0",
  "info": {
    "title": "ElevenLabs API Overlay",
    "version": "1.0.0"
  },
  "actions": [
    {
      "target": "$.components.schemas",
      "update": {
        "PaymentRequiredErrorDetail": {
          "type": "object",
          "title": "PaymentRequiredErrorDetail",
          "properties": {
            "code": {
              "type": "string",
              "description": "Error code identifying the specific payment issue.",
              "example": "paid_plan_required"
            },
            "message": {
              "type": "string",
              "description": "Human-readable description of the payment requirement."
            },
            "request_id": {
              "type": "string",
              "description": "Unique identifier for the request."
            },
            "status": {
              "type": "string",
              "description": "HTTP status description.",
              "example": "payment_required"
            },
            "type": {
              "type": "string",
              "description": "Error type.",
              "example": "payment_required"
            }
          }
        },
        "PaymentRequiredError": {
          "type": "object",
          "title": "PaymentRequiredError",
          "properties": {
            "detail": {
              "$ref": "#/components/schemas/PaymentRequiredErrorDetail"
            }
          }
        }
      }
    },
    {
      "target": "$.components",
      "update": {
        "responses": {
          "PaymentRequired": {
            "description": "Payment Required - A paid plan is required to access this resource.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentRequiredError"
                }
              }
            }
          }
        }
      }
    },
    {
      "target": "$.paths.*.*.responses",
      "update": {
        "402": {
          "$ref": "#/components/responses/PaymentRequired"
        }
      }
    },
    {
      "target": "$.components.schemas",
      "update": {
        "BadRequestErrorDetail": {
          "type": "object",
          "title": "BadRequestErrorDetail",
          "properties": {
            "status": {
              "type": "string",
              "description": "Error code identifying the specific issue.",
              "example": "max_character_limit_exceeded"
            },
            "message": {
              "type": "string",
              "description": "Human-readable description of the error."
            }
          }
        },
        "BadRequestError": {
          "type": "object",
          "title": "BadRequestError",
          "properties": {
            "detail": {
              "$ref": "#/components/schemas/BadRequestErrorDetail"
            }
          }
        }
      }
    },
    {
      "target": "$.components.responses",
      "update": {
        "BadRequest": {
          "description": "Bad Request - The request was invalid or malformed.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BadRequestError"
              }
            }
          }
        }
      }
    },
    {
      "target": "$.paths['/v1/history/download'].post.responses['400']",
      "remove": true
    },
    {
      "target": "$.paths.*.*.responses",
      "update": {
        "400": {
          "$ref": "#/components/responses/BadRequest"
        }
      }
    }
  ]
}
